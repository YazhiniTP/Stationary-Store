<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        app:cardCornerRadius="1dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/business_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <android.support.v7.widget.LinearLayoutCompat

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Disbursement Voucher"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />




                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:orientation="horizontal">


                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Item Code"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText" />


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/item_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Item Code"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText" />



                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:orientation="horizontal">


                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Description"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/item_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Description"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText" />



                    </android.support.v7.widget.LinearLayoutCompat>


                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:orientation="horizontal">


                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Disbursed Qty "
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/qty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Unit Amt ($) "
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText" />



                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>

            </ScrollView>



        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:layout_margin="5dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Disbursed Qty"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_weight="1"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/txtquantityadjusted"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1"
            tools:ignore="Deprecated" />


        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="23dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/stoke_frame_rounded_fill_white"
            android:padding="1dp">

            <TextView
                android:id="@+id/update"
                style="@style/secondarytext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Update"
                android:textColor="@color/red_dark"
                android:textSize="12dp" />
        </LinearLayout>



    </LinearLayout>






</android.support.v7.widget.LinearLayoutCompat>
